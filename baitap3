def bubble_sort(arr):
    n = len(arr)
    for i in range(n):
        swapped = False
        for j in range(0, n-i-1):
            if arr[j] > arr[j+1]:
                arr[j], arr[j+1] = arr[j+1], arr[j]
                swapped = True
        if not swapped:
            break
    return arr

# Nhập mảng số nguyên từ người dùng và sắp xếp bằng Bubble Sort
arr = list(map(int, input("Nhập mảng số nguyên, cách nhau bởi dấu cách: ").split()))
sorted_arr = bubble_sort(arr)
print(f"Mảng sau khi sắp xếp: {sorted_arr}")
